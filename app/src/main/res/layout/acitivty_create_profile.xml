<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background_skyblue"
        >
        <ImageView
            android:id="@+id/ivMoreVert"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:background="@drawable/more_verticle_dots"
           android:layout_alignParentEnd="true"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civProfile"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/transporter_logo"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp" />

        <Spinner
            android:id="@+id/transporterCategory"
            android:layout_width="300dp"
            android:entries="@array/TransporterCategory"
            android:layout_height="45dp"
            android:padding="2dp"
            android:layout_below="@id/civProfile"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edittext_decorator"
            android:spinnerMode="dropdown"
             />
        <EditText
            android:id="@+id/etUserName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextTheme"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:hint="user name"
            android:drawableRight="@drawable/user_icon"
            android:layout_below="@+id/transporterCategory"
            android:background="@drawable/edittext_decorator"
            />
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:theme="@style/EditTextTheme"
            android:lines="2"
            android:hint="Address"
            android:drawableRight="@drawable/ic_outline_home_24"
            android:layout_below="@id/etUserName"
            android:textColorHint="@color/colorBlack"
            android:background="@drawable/edittext_decorator"
            />
        <EditText
            android:id="@+id/etContactNumber"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:theme="@style/EditTextTheme"
            android:hint="@string/fui_phone_hint"
            android:digits="0123456789+"
            android:maxLength="13"
            android:drawableRight="@drawable/ic_baseline_phone_24"
            android:inputType="phone"
            android:layout_below="@id/etAddress"
            android:textColorHint="@color/colorBlack"
            android:background="@drawable/edittext_decorator"
            />
        <EditText
            android:id="@+id/etGstNo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:theme="@style/EditTextTheme"
            android:hint="GSTNo"
            android:maxLength="15"
            android:visibility="invisible"
            android:layout_below="@id/etContactNumber"
            android:textColorHint="@color/colorBlack"
            android:background="@drawable/edittext_decorator"
            />
        <EditText
            android:id="@+id/etAadharNo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:maxLength="12"
            android:hint="AadharCardNo"
            android:inputType="number"
            android:theme="@style/EditTextTheme"
            android:visibility="invisible"
            android:layout_below="@id/etContactNumber"
            android:textColorHint="@color/colorBlack"
            android:background="@drawable/edittext_decorator"
            />

        <Button
            android:id="@+id/btnCreatProfile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Create Profile"
            android:layout_marginTop="30dp"
            android:layout_below="@id/etAadharNo"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_decorator"
            />
    </RelativeLayout>

</ScrollView>